<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="TitleTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/medium_size</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="DescriptionTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/small_size</item>
        <item name="android:textColor">@color/colorGray</item>
    </style>

</resources>